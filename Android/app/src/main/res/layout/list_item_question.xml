<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="What are you working on?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView_list_question" />

    <TextView
        android:text="10-08-2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_list_question"
        android:layout_marginTop="15dp"
        android:id="@+id/textView_list_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"/>

    <TextView
        android:text="Wim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_list_author"
        android:layout_marginTop="15dp"
        android:layout_below="@id/textView_list_question"
        android:layout_toRightOf="@+id/textView_list_date"
        android:layout_marginStart="16dp"
        />


    <ImageView
        
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignTop="@id/textView_list_question"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:id="@+id/imageView_list_answered" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_list_numberAnswers"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/imageView_list_answered"
        />


</RelativeLayout>